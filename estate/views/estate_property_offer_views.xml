<odoo>
    <!-- List view -->
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.view.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Offers" editable="bottom">
                <field name="price" />
                <field name="property_type_id" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_accept" type="object" icon="fa-check" title="Accept"
                    invisible="status" />
                <button name="action_refuse" type="object" icon="fa-times" title="Refuse"
                    invisible="status" />
                <field name="status" readonly="True" />
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                </group>
            </form>
        </field>
    </record>

    <!-- Action for stat button -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>